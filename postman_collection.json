          "script": {
            "type": "text/javascript",
            "exec": [
              "// Añadir Authorization si auth_token está en el entorno",
              "var t = pm.environment.get('auth_token');",
              "if (t) {",
              "  pm.request.headers.add({ key: 'Authorization', value: 'Bearer ' + t });",
              "}"
            ]
          }
        }
      ]
