    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/auth/login",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api","v1","auth","login"
          ]
        }
      ,
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "// Guardar el access_token en la variable de entorno 'auth_token'",
              "if (pm.response.code === 201 || pm.response.code === 200) {",
              "  var json = pm.response.json();",
              "  if (json && json.access_token) {",
              "    pm.environment.set('auth_token', json.access_token);",
              "    console.log('auth_token guardado');",
              "  } else {",
              "    console.warn('access_token no encontrado en la respuesta');",
              "  }",
              "} else {",
              "  console.warn('Login falló con status ' + pm.response.code);",
              "}"
            ]
          }
        }
      ]
      }
    },
