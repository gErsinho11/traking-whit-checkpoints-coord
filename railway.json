{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run build",
    "startCommand": "npm start"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "healthcheckPath": "/api/v1/health"
  },
  "env": {
    "NODE_ENV": "production",
    "PORT": "3000",
    "JWT_SECRET": "super-secret-change-me",
    "NPM_CONFIG_PRODUCTION": "false"
  }
}
